# Start logstash on boot?
START=yes

# pulled in from the init script; makes things easier.
NAME=logstash

# location of java
JAVA=/usr/bin/java

# arguments to pass to java
LS_JAVA_OPTS="-Xmx256m -Djava.io.tmpdir=/var/lib/logstash/"

PIDFILE={{ logstash_pid_file }}

# user id to be invoked as
LS_USER={{ logstash_user }}

# location of the logstas jar file
LS_JAR={{ logstash_install_directory }}/logstash.jar

# logstash home location
LS_HOME={{ logstash_data_directory }}

# logstash log directory
LOG_DIR={{ logstash_log_directory }}

# logstash log file
LOG_FILE=$LOG_DIR/$NAME.log

# logstash configuration directory
CONF_DIR={{ logstash_config_directory }}/conf.d

# Open file limit
OPEN_FILES=2048

# Nice level
NICE=19

# Set LogStash options
LS_OPTS="--log ${LOG_FILE}"

# Set a home directory
HOME=$LS_HOME